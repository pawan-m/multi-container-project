{
    "AWSEBDockerrunVersion" : 2 ,
    "containerDefinitions": [
        {
            "name" : "client",
            "image" : "p20min/multi-client",
            "hostname" : "client",
            "essential" : false

        },
        {
            "name" : "server",
            "image" : "p20min/multi-server",
            "hostname" : "api",
            "essential" : false

        },
        {
            "name" : "worker",
            "image" : "p20min/multi-worker",
            "hostname" : "worker",
            "essential" : false
        },
        {
            "name" : "nginx",
            "image" : "p20min/multi-nginx",
            "hostname": "nginx",
            "essential":true,
            "portMappings": [
                {
                    "hostPort" : "80",
                    "containerPort" : "80"
                }
            ],
            "links" : ["client", "server"]
        }

    ]
}